@model AssetmarkBAT.Models.BATModel

@{
    Layout = "~/Views/AssetmarkBAT/Shared/_Layout.cshtml";
}

@section Title
{
    AssetMark – BAT – Assessement5
}

@Html.HiddenFor(m => Model.PDFPath)

<a id="download-pdf" href="@Model.PDFPath" class="hide" target="_blank">Download PDF</a>


<main>
    <section>
        <div class="container">
            <h1><img src="~/Images/business_assessment_logo.png" alt="Business Assessment Tool" width="350"></h1>
            <h2><span>Business Assessment</span></h2>
            <p>Thank you for completing your business assessment. Take a look at the Value Maximization Index® table below to identify which category you scored the lowest in, then click the category links to access resources specific to each category that are designed to help you improve corresponding areas of your business.</p>
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <table ng-cloak>
                        <thead>
                            <tr>
                                <th>Valuation Categories</th>
                                <th>Score</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><a href="https://www.assetmark.com/business-Assessment-Tool/managingyourpractice" target="_blank">Managing Your Practice</a></td>
                                <td>@Model.ClientValuationModel.ManagingYourPracticeScore</td>
                            </tr>
                            <tr>
                                <td><a href="https://www.assetmark.com/business-Assessment-Tool/MarketingYourBusiness" target="_blank">Marketing Your Business</a></td>
                                <td>@Model.ClientValuationModel.MarketingYourBusinessScore</td>
                            </tr>
                            <tr>
                                <td><a href="https://www.assetmark.com/business-Assessment-Tool/OptimizingYourOperations" target="_blank">Optimizing Your Operations</a></td>
                                <td>@Model.ClientValuationModel.OptimizingYourOperationsScore</td>
                            </tr>
                            <tr>
                                <td><a href="https://www.assetmark.com/business-Assessment-Tool/EmpoweringYourTeam" target="_blank">Empowering Your Team</a></td>
                                <td>@Model.ClientValuationModel.EmpoweringYourTeamScore</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td>Total VMI Score</td>
                                <td>@Model.Vmi_Index</td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <p><strong>To adjust your inputs you can <a href="/?redo=1">return to the beginning</a></strong></p>
        </div>
    </section>
    <section class="white">
        <div class="container">
            <h2><span>Valuation Optimizer</span></h2>
            <p>Here you see how changes in growth rate, profit margins and Value Maximization Index® can impact your firm’s estimated valuation range. Use the sliders below to visualize how changes to each key area impact your overall range. </p>

            <div class="row" ng-cloak>
                <div class="col-md-8 col-md-offset-2">

                    <div class="graph" ng-init="initGraph()">
                        <h6>Firm Valuation Range: Current Value vs. Optimized Value</h6>
                        <div id="optimizerGraph" style="min-width: 310px; height: 300px; margin: 0 auto"></div>
                    </div>

                    <h6>See how changes impact your firm valuation.</h6>
                    <p>
                        <small>Use the slider on "Your Firm" to increase or decrease your VMI Score</small><br>
                        <small><span class="swatch grey"></span> Top performing firms</small>
                    </p>

                    <div class="optimizer">
                        <div class="title">
                            <h3 class="optimized-label">Projected Annual Growth Rate</h3>
                            <div class="optimized-value">{{pagr.value}}%</div>
                        </div>
                        <div class="optimizer-slider">
                            <input type="text" ng-model="pagr.value" />
                            <div class="slider-ticks">
                                <rzslider rz-slider-model="pagrTicks.minValue"
                                          rz-slider-high="pagrTicks.maxValue"
                                          rz-slider-options="pagrTicks.options"></rzslider>
                            </div>
                            <div class="slider-comp">
                                <rzslider rz-slider-model="pagrComp.minValue"
                                          rz-slider-high="pagrComp.maxValue"
                                          rz-slider-options="pagrComp.options"></rzslider>
                            </div>
                            <div class="slider-pointer">
                                <rzslider rz-slider-model="pagr.value"
                                          rz-slider-options="pagr.options"></rzslider>
                            </div>
                        </div>
                    </div>

                    <div class="optimizer">
                        <div class="title">
                            <h3 class="optimized-label">Profit Margin</h3>
                            <div class="optimized-value">{{operatingProfit | number:2}}%</div>
                        </div>
                        <div class="sub-title">
                            <h4 class="optimized-label">Profit is annualized</h4>
                            <div class="optimized-value">{{profitAnnualized | currency : '$' }}</div>
                        </div>
                        <div class="optimizer-slider">
                            <input type="text" ng-model="pm.value" />
                            <div class="slider-ticks">
                                <rzslider rz-slider-model="pmTicks.minValue"
                                          rz-slider-high="pmTicks.maxValue"
                                          rz-slider-options="pmTicks.options"></rzslider>
                            </div>
                            <div class="slider-comp">
                                <rzslider rz-slider-model="pmComp.minValue"
                                          rz-slider-high="pmComp.maxValue"
                                          rz-slider-options="pmComp.options"></rzslider>
                            </div>
                            <div class="slider-pointer">
                                <rzslider rz-slider-model="pm.value"
                                          rz-slider-options="pm.options"></rzslider>
                            </div>
                        </div>
                    </div>

                    <div class="optimizer">
                        <div class="title">
                            <h3 class="optimized-label">Valuation Maximization Index<sup>&trade;</sup></h3>
                            <div class="optimized-value">{{vmi.value}}</div>
                        </div>
                        <div class="optimizer-slider">
                            <div class="optimizer-slider">
                                <input type="text" ng-model="vmi.value" />
                                <div class="slider-ticks">
                                    <rzslider rz-slider-model="vmiTicks.minValue"
                                              rz-slider-high="vmiTicks.maxValue"
                                              rz-slider-options="vmiTicks.options"></rzslider>
                                </div>
                                <div class="slider-comp">
                                    <rzslider rz-slider-model="vmiComp.minValue"
                                              rz-slider-high="vmiComp.maxValue"
                                              rz-slider-options="vmiComp.options"></rzslider>
                                </div>
                                <div class="slider-pointer">
                                    <rzslider rz-slider-model="vmi.value"
                                              rz-slider-options="vmi.options"></rzslider>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="button-container text-right">
                        <button ng-click="resetVmiSliders()">Reset</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
